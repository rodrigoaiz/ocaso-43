---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Ocaso 43</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen flex flex-col overflow-x-hidden">
    <Navbar />

    <main class="flex-grow container mx-auto px-4 py-12 lg:py-16 max-w-5xl">
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --font-outfit: "Outfit", sans-serif;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: var(--font-outfit);
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
