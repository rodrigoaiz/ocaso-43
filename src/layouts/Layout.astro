---
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Ocaso 43</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body class="min-h-screen flex flex-col">
    <header
      class="py-10 bg-white/30 backdrop-blur-md sticky top-0 z-50 border-b border-orange-100/50"
    >
      <div class="container mx-auto px-4 flex justify-between items-center">
        <a href="/" class="group flex items-center gap-3">
          <div
            class="w-10 h-10 rounded-xl bg-gradient-to-br from-orange-400 to-violet-500 shadow-lg shadow-orange-200 flex items-center justify-center text-white font-black italic text-xl group-hover:scale-110 transition-transform"
          >
            O
          </div>
          <div class="flex flex-col">
            <span
              class="text-xl font-black tracking-tight text-slate-900 leading-none"
              >Ocaso 43</span
            >
            <span
              class="text-[10px] uppercase tracking-[0.3em] font-bold text-orange-500"
              >Administración</span
            >
          </div>
        </a>
        <nav>
          <ul
            class="flex gap-8 text-sm font-bold uppercase tracking-widest text-slate-500"
          >
            <li>
              <a href="/" class="hover:text-orange-500 transition-colors"
                >Inicio</a>
            </li>
            <li>
              <a href="/minutas" class="hover:text-orange-500 transition-colors"
                >Minutas</a>
            </li>
            <li>
              <a
                href="/documentos"
                class="hover:text-orange-500 transition-colors">Documentos</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="flex-grow container mx-auto px-4 py-16 max-w-5xl">
      <slot />
    </main>

    <footer class="py-12 text-center">
      <div class="container mx-auto px-4">
        <div
          class="w-20 h-1 bg-gradient-to-r from-transparent via-orange-200 to-transparent mx-auto mb-8 rounded-full"
        >
        </div>
        <p class="text-sm font-medium text-slate-400">
          &copy; {new Date().getFullYear()} Administración <span
            class="text-slate-900 font-bold">Ocaso 43</span>
        </p>
        <p
          class="text-[10px] uppercase tracking-widest text-slate-300 mt-2 font-bold"
        >
          Transparencia y Comunidad
        </p>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  :root {
    --font-outfit: "Outfit", sans-serif;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: var(--font-outfit);
  }

  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
