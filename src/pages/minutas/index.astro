---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const minutas = await getCollection("minutas");

const url = new URL(Astro.request.url);
const filterYear = url.searchParams.get("year");
const filterMonth = url.searchParams.get("month");

let filteredMinutas = minutas.sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime(),
);

if (filterYear) {
  filteredMinutas = filteredMinutas.filter(
    (m) => m.data.year === parseInt(filterYear),
  );
}

if (filterMonth) {
  filteredMinutas = filteredMinutas.filter(
    (m) => m.data.month === parseInt(filterMonth),
  );
}

const monthName = filterMonth
  ? new Date(2000, parseInt(filterMonth) - 1).toLocaleDateString("es-MX", {
      month: "long",
    })
  : "";
---

<Layout title="Minutas de Reuniones">
  <header class="mb-16">
    <div class="flex items-center gap-4 mb-4">
      <a
        href="/"
        class="text-xs font-black uppercase tracking-widest text-orange-500 hover:text-orange-600 transition-colors"
        >&larr; Inicio</a
      >
    </div>
    <h1 class="text-5xl font-black text-slate-900 mb-4 tracking-tight">
      Minutas de <span class="text-orange-500">Reuniones</span>
    </h1>
    <p class="text-lg text-slate-500 font-medium max-w-2xl leading-relaxed">
      {
        filterYear || filterMonth ? (
          <span>
            Visualizando el registro dedicado a{" "}
            <span class="text-slate-900 border-b-2 border-orange-200">
              {monthName} {filterYear}
            </span>
          </span>
        ) : (
          <span>
            Colecci√≥n completa de actas y acuerdos de la comunidad Ocaso 43.
          </span>
        )
      }
    </p>
  </header>

  <div class="grid gap-6">
    {
      filteredMinutas.length > 0 ? (
        filteredMinutas.map((minuta) => (
          <a
            href={`/minutas/${minuta.slug}`}
            class="block p-10 rounded-3xl bg-white border border-slate-100 hover:border-orange-200/50 transition-all shadow-sm hover:shadow-xl hover:shadow-orange-500/5 group relative overflow-hidden"
          >
            <div class="absolute top-0 right-0 w-32 h-32 bg-orange-50/50 rounded-full -mr-16 -mt-16 group-hover:scale-150 transition-transform duration-700" />

            <div class="relative z-10">
              <div class="flex flex-wrap justify-between items-center gap-4 mb-6">
                <div class="flex gap-2">
                  <span class="px-3 py-1 bg-orange-500 text-white text-[10px] font-black rounded-lg uppercase tracking-widest">
                    {minuta.data.year}
                  </span>
                  <span class="px-3 py-1 bg-violet-50 text-violet-600 text-[10px] font-black rounded-lg uppercase tracking-widest">
                    {new Date(2000, minuta.data.month - 1).toLocaleDateString(
                      "es-MX",
                      { month: "long" },
                    )}
                  </span>
                </div>
                <span class="text-xs text-slate-400 font-bold uppercase tracking-wider bg-slate-50 px-3 py-1 rounded-full">
                  Publicado:{" "}
                  {minuta.data.date.toLocaleDateString("es-MX", {
                    day: "numeric",
                    month: "short",
                  })}
                </span>
              </div>
              <h2 class="text-2xl font-black text-slate-900 mb-3 group-hover:text-orange-500 transition-colors leading-tight">
                {minuta.data.title}
              </h2>
              <p class="text-slate-500 text-sm leading-relaxed max-w-2xl">
                {minuta.data.description}
              </p>

              <div class="mt-8 flex items-center justify-between">
                <div class="flex gap-2">
                  {minuta.data.tags.map((tag) => (
                    <span class="text-[10px] font-bold text-slate-300 uppercase tracking-tighter">
                      #{tag}
                    </span>
                  ))}
                </div>
                <span class="text-orange-500 font-black text-xs uppercase tracking-[0.2em] flex items-center gap-2 group-hover:translate-x-2 transition-transform">
                  Revisar Minuta <span class="text-lg">&rarr;</span>
                </span>
              </div>
            </div>
          </a>
        ))
      ) : (
        <div class="py-24 text-center bg-white/50 backdrop-blur-sm rounded-3xl border border-dashed border-orange-200 shadow-inner">
          <div class="w-16 h-16 bg-orange-50 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-orange-200"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9.172 9.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
          </div>
          <p class="text-slate-400 font-bold">
            Sin resultados encontrados para este periodo.
          </p>
          <a
            href="/minutas"
            class="inline-block mt-6 px-8 py-3 bg-orange-500 text-white rounded-xl font-black text-xs uppercase tracking-widest hover:bg-orange-600 transition-all shadow-lg shadow-orange-200"
          >
            Ver Todas
          </a>
        </div>
      )
    }
  </div>
</Layout>
